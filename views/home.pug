block content
    header.header
        nav.nav
            .logo
                img.logo__img(src="./img/icons/logo_transparent.png", alt="Logo")
            ul.nav__items
                li.nav__elements
                    a(href="/") Home
                li.nav__elements
                    a(href="/universities") Universities
                li.nav__elements
                    a(href="/campus") Campus
                div
                .fix__login-1
                    if user
                        li.nav__elements
                            a.button.button-user(href="/dashboard" id='login')=user.name 
                                //- span 4
                        li.nav__elements
                               a.button.button-logout(href="#" id="logoutHome") logout
                    else
                        li.nav__elements
                            a.button.button-signup(href="/signup") Sign Up
                        li.nav__elements
                            a.button.button-login(href="/login") login

        .animated
            h1.hero__title University Matcher
            if user
                span.hero__subtitle Welcome #{user.name}
            else
                span.hero__subtitle Let's shape your future


    main
        section.uni
            if user
                h2.uni__title Universities That is recommend to you
            else
                h2.uni__title The Top Three Universities
            .uni__row
                //- each u in top3
                    +universityCard(u.slug,u.coverImage,u.name,u.abbrv,u.description.slice(0,20),u.address,u.programs,u.numOfStudents,'spring',u.price,u.ratingAverage)
                +universityCard(top3[0].slug,top3[0].coverImage,top3[0].name,top3[0].abbrv,top3[0].description.slice(0,30),top3[0].address,top3[0].programs,top3[0].numOfStudents,top3[0].website,top3[0].priceAverage,top3[0].ratingAverage)    
                +universityCard(top3[1].slug,top3[1].coverImage,top3[1].name,top3[1].abbrv,top3[1].description.slice(0,30),top3[1].address,top3[1].programs,top3[1].numOfStudents,top3[1].website,top3[1].priceAverage,top3[1].ratingAverage)    
                +universityCard(top3[2].slug,top3[2].coverImage,top3[2].name,top3[2].abbrv,top3[2].description.slice(0,30),top3[2].address,top3[2].programs,top3[2].numOfStudents,top3[2].website,top3[2].priceAverage,top3[2].ratingAverage)    
                
               

        section.students
            h2.students__title Learn More about Universities from students
            p.students__paragraph
                span Join the conversation, 
                | meet many students and graduates and learn from their experience.
                | looking for a specific university, want to learn about the different
                | courses it offers or how good their professors are. Join University
                | Matcher.
            
            .box__container
                .box
                    .box__img
                        img.box__img--photo( src="./img/users/aarav.jpg",alt="UserName")
                    
                    
                    .box__body
                        h4.box__body__elements Raed
                        h4.box__body__elements Bachelor degree in business administration
                        h4.box__body__elements AOU Graduate

                .box
                    .box__img
                        img.box__img--photo( src="./img/users/leo.jpg",alt="UserName")
                
                    .box__body
                        h4.box__body__elements Ahmad
                        h4.box__body__elements Bachelor degree in Civil Engineering
                        h4.box__body__elements ACK Graduate

                .box
                    .box__img
                        img.box__img--photo( src="./img/users/monica.jpg",alt="UserName")
                
                    .box__body
                        h4.box__body__elements Sarah
                        h4.box__body__elements Bachelor degree in Information Technology
                        h4.box__body__elements AUM Graduate

            .center
                a.button.button--details.center__element(href="/signup") Join Now


        section.chatbot
            h2.chatbot__title Still confused our chatbot can help you
            .chatbot__grid
                p.chatbot__paragraph
                    |Powered by dialogflow, Chat Master is designed to help you to choose
                    |the best university for you. Chat Master is smart and friendly
                    |it uses Artifical Intelligence, it provides you with the help you need. all you have to do
                    |is just ask!
            
                .chatbot__image
                    iframe(allow="microphone;" width="600" height="500" src="https://console.dialogflow.com/api-client/demo/embedded/581d5614-e3e0-4308-a131-f77463997262")


 


