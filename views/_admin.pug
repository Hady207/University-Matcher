

mixin universitiesLis(i,img,name,uniId)
    li.dashboard__li
        .user__main__list
            img.user__profile(src=`/img/universities/${img}`)
        
        h2.user__name=name
        .detail__button__div
            a.b1.b1__edit.b1__delete--sm.details__buttons(id=`details__button-${i}` data-finduni=uniId) Details


mixin reviewCard(review,img,name,createdAt,rating)
    figure.review
        blockquote.review__text=review
        figcaption.review__user
            img.review__photo(src=`img/users/${img}`)
            .review__user-box
                p.review__user-name=name
                p.review__user-date=createdAt
            .review__raitng=rating

mixin reviewsLis(i,reviewId,title,review,img,name,createdAt,rating)
    figure.review
        .review__box
            h3.reviewview__title=title
            a.b1.b1__delete--sm.review__admin__delete(id=`delete__review--${i}` href="#" data-reviewId=reviewId) Delete

        blockquote.review__text=review
        figcaption.review__user
            img.review__photo(src=`img/users/${img}`)
            .review__user-box
                p.review__user-name=name
                p.review__user-date=createdAt
            .review__rating=rating


mixin userLis(img,name,userId)
    -if(userId != user.id)
        li.dashboard__li
            .user__main__list
                img.user__profile(src=`/img/users/${img}`)
            
            h2.user__name=name
            .detail__button__div
                a.b1.b1__delete--sm.user__admin__delete(href=`#` data-userId=userId) Delete




  
         
