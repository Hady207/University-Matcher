extend base

mixin universitiesLis(img,name,uniId)
    li.dashboard__li
        .user__main__list
            img.user__profile(src="/img/university-1.jpg")

        h2.user__name=name
        .detail__button__div
            a.b1.b1__edit.b1__delete--sm(id="details__button") Details


mixin userLis(img,User,userId)

    li.dashboard__li(style="display:flex;padding: 2rem;align-items: center;")
        .user__main__list
            img.user__profile(src=`/img/users/${img}`)

        a.user__name(href=`/profile/${User.id}`)=User.name
        .detail__button__div(style="margin-left:auto")
            -if(user.id == userId)
                a.b1.b1__delete--sm(href=`/dashboard` ) me
            -else 
                a.b1.b1__delete--sm(href=`/${userId}` ) unfollow


block content
    body.dashboard__body
        .container__dashboard
            header.user__nav__header
                img.logo(src="../img/icons/logo_transparent.png")

                //- form.search(action="", method="get")
                //-     input.search__input(type="search",placeholder="Search")
                //-     button.search__button(type="submit")
                //-         ion-icon(name="search")

                nav.user__nav
                    //- .user__icon--box(id="bookmark")
                    //-     ion-icon(name="bookmark") 
                    //-     span.user__nav--notification 7
                    -if(user.following.some(val => val.id == friend.id))
                        button.unfollow__button(data-friend=`${friend.id}`)
                            ion-icon(name="person-add")
                    -else if(user.id !== friend.id)
                        button.follow__button(data-friend=`${friend.id}`)
                            ion-icon(name="person-add")
                    .user
                        img.user__profile(src=`../img/users/${friend.photo}`)
                        span.user__name= friend.name

            .dashboard__dropdown.dashboard__dropdown--notification(id="notificationDrop" style="z-index:1000;")
                .list
                    h3.list__item Hello
                    h3.list__item Hello
                    h3.list__item Hello
                    h3.list__item Hello

            .dashboard__dropdown.dashboard__dropdown--bookmarks(id="bookmarksDrop" style="z-index:1000;")
                .list
                    h3.list__item Hello
                    h3.list__item Hello
                    h3.list__item Hello
                    h3.list__item Hello
            .content
                nav.side__nav
                    ul.side-nav
                        li.side-nav__item.side-nav__item--active(id="menu_university")
                            a.side-nav__link(id="universities" href="#")
                                ion-icon(name="school")
                                span Universities

                        li.side-nav__item(id="menu_review")
                            a.side-nav__link(id="reviews" href="#")
                                ion-icon(name="contacts")
                                span Followers

                        //- li.side-nav__item(id="menu_user")
                        //-     a.side-nav__link(id="users" href="#")
                        //-         ion-icon(name="settings")
                        //-         span My settings
                    .legal &copy; 2020 All rights reserved

                main.dashboard__universitiesview(id="universities__main" style="display:block;")
                    .dashboard__container
                        ul.dashboard__ul
                            +universitiesLis()

                main.dashboard__reviewview(id="review__main")
                    h2.dashboard__settings--title Friends List
                    .dashboard__container
                        h5 Followers
                        each f in friend.followers
                            +userLis(f.photo,f,f._id)
                        h5 Make connections and follow other students
                        hr
                        h5 Following
                        each f in friend.following
                            +userLis(f.photo,f,f._id)







